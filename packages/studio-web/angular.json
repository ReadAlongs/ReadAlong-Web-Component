{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "readalong-studio": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "fr": "src/i18n/messages.fr.json",
          "es": "src/i18n/messages.es.json"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/readalong-studio",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "sass",
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "ignore": ["fr-fr/*"],
                "input": "./node_modules/soundswallower/model",
                "output": "./model"
              }
            ],
            "customWebpackConfig": {
              "path": "./custom-webpack.config.cjs"
            },
            "styles": ["src/styles.sass"],
            "stylePreprocessorOptions": {
              "includePaths": ["./node_modules"]
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1.5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "fr": {
              "localize": ["fr"],
              "deleteOutputPath": false
            },
            "es": {
              "localize": ["es"],
              "deleteOutputPath": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "readalong-studio:build:production"
            },
            "development": {
              "browserTarget": "readalong-studio:build:development"
            },
            "fr": {
              "browserTarget": "readalong-studio:build:development,fr"
            },
            "es": {
              "browserTarget": "readalong-studio:build:development,es"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-builders/custom-webpack:extract-i18n",
          "options": {
            "browserTarget": "readalong-studio:build"
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.cjs",
            "inlineStyleLanguage": "sass",
            "assets": [
              "src/favicon.ico",
              {
                "glob": "**/*",
                "ignore": ["fr-fr/*"],
                "input": "./node_modules/soundswallower/model",
                "output": "./model"
              }
            ],
            "customWebpackConfig": {
              "path": "./custom-webpack.config.cjs"
            },
            "styles": ["src/styles.sass"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
